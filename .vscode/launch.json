    "version": "0.2.0",
    "configurations": [
        {
            "name": "Direct search",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/benchmarks/direct.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "ENV_FOR_DYNACONF": "development"
            },
        },
        {
            "name": "Local search",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/benchmarks/local_search.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "ENV_FOR_DYNACONF": "development"
            },
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Launch Firefox",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:5500/deploy/index.html",
            "tabFilter": "http://localhost:5500/*",
            "webRoot": "${workspaceFolder}",
            "reloadOnChange": {
                "watch": "${workspaceFolder}/**/*",
                "ignore": "**/node_modules/**"
            }
        },
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "urlFilter": "http://localhost:5500/*",
            "webRoot": "${workspaceFolder}"
        },
    ]
}